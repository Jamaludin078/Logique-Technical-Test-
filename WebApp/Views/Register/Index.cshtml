	<link rel="stylesheet" href="/lib/adminlte/dist/css/adminlte.min.css">
</head>
<body class="hold-transition layout-top-nav">
	<div class="wrapper">
		<div class="content-wrapper">
			<div class="content-header">
			</div>

			<div class="content">
				<div class="container">
					<div class="card card-dark">
						<div class="card-header register-card-body">
							<h3 class="login-box-msg">Register a new membership</h3>
						</div>
						<div class="card-body">
							@*<form id="form-registration" asp-action="RegisterMember" asp-controller="register" method="post">*@
							<form id="form-registration">
								<div class="row">
									<div class="col-md-6">
										<div class="form-group">
											<label>First Name</label>
											<input asp-for="FirstName" id="FirstName" type="text" class="form-control" placeholder="First name">
										</div>
										<div class="form-group">
											<label>Last Name <span style="color:red">*</span></label>
											<input asp-for="LastName" id="LastName" type="text" class="form-control" placeholder="Last name" required>
										</div>
										<div class="form-group">
											<label>Email <span style="color:red">*</span></label>
											<input asp-for="Email" id="Email" type="email" class="form-control email-input" placeholder="Email" required>
											<p id="result-email"></p>
										</div>
									</div>

									<div class="col-md-6">
										<div class="form-group">
											<label>Password <span style="color:red">*</span></label>
											<input asp-for="Password" id="Password" type="password" class="form-control input-password" name="password" placeholder="Password" required>
											<p class="result-password"></p>
										</div>
										<div class="form-group">
											<label>Repeat password <span style="color:red">* </span></label>
											<input type="password" class="form-control" id="repeat-password" placeholder="Repeat password" required>
											<p class="result-repeat-password"></p>
										</div>
										<div class="row">
											<div class="col-8">
												<div class="icheck-primary">
													<input asp-for="TNC" type="checkbox" id="TNC" required />
													<label for="TNC">
														I agree to the terms <span style="color:red">*</span>
													</label>
												</div>
											</div>
											<!-- /.col -->
											<div class="col-4">
												<button type="submit" id="btn-register" class="btn btn-dark btn-block">Register</button>
											</div>

											<!-- /.col -->
										</div>
										<p class="mb-0">
											<a asp-controller="Account" asp-action="Login" class="float-right">I already have a membership</a>
										</p>
									</div>


								</div>
							</form>

						</div>
						<!-- /.form-box -->
					</div><!-- /.card -->

				</div>
			</div>
		</div>
	</div>
